{
  "name": "@finos/git-proxy",
  "version": "1.1.0",
  "description": "Deploy custom push protections and policies on top of Git.",
  "engines": {
    "node": "20"
  },
  "type": "commonjs",
  "scripts": {
    "client": "vite --config vite.config.js",
    "clientinstall": "npm install --prefix client",
    "server": "node index.js",
    "start": "concurrently 'npm run server' 'npm run client'",
    "build": "vite build",
    "ui-test": "vite",
    "server-test-ci": "mocha --exit",
    "server-test": "mocha --exit",
    "test": "cross-env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'tests/**/*.ts'",
    "test-coverage": "nyc npm run test",
    "test-coverage-ci": "nyc --reporter=lcovonly --reporter=text npm run test",
    "prepare": "node ./scripts/prepare.js",
    "lint": "eslint --fix . --ext .ts,.js,.jsx",
    "gen-schema-doc": "node ./scripts/doc-schema.js"
  },
  "bin": "./index.js",
  "author": "Paul Groves",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*",
    "plugins/*"
  ],
  "packageManager": "yarn@4.1.0",
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.10",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@types/chai": "^4.3.11",
    "@types/eslint": "^8",
    "@types/jsdom-global": "^3",
    "@types/mocha": "^10",
    "@types/source-map-support": "^0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^5.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.3.0",
    "prettier": "^3.2.5",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
